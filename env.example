#
#  YOUR PROJECT FOLDER STRUCTURE ON NETLIFY:
#  ─────────────────────────────────────────
#  profkingkeys/
#  ├── qa_tutorial.html          ← your main frontend file
#  ├── spelling_game.html        ← your spelling game
#  ├── painmap.html              ← your pain map
#  ├── netlify.toml              ← netlify config (copy below)
#  └── netlify/
#      └── functions/
#          └── generate-questions.js   ← the serverless function
#
#  NOTE: Rename netlify_function.js to generate-questions.js
#        and place it inside netlify/functions/ folder
#
# ─────────────────────────────────────────────────────────────
#  netlify.toml content (create this file in your root folder)
# ─────────────────────────────────────────────────────────────
#
#  [build]
#    publish = "."
#    functions = "netlify/functions"
#
#  [functions]
#    node_bundler = "esbuild"
#
#  [[functions]]
#    path = "/api/generate-questions"
#    name = "generate-questions"
#
#  [functions."generate-questions"]
#    timeout = 120
